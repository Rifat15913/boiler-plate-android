<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.GradientStatusBar" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <style name="Authentication">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Authentication.EditTextTitle">
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_smaller_body</item>
    </style>

    <style name="Authentication.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_32</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large_body</item>
        <item name="android:paddingBottom">@dimen/padding_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dashboard" />

    <style name="Dashboard.BottomBarItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_smaller_body</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/padding_8</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
    </style>

    <style name="DashboardPageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DashboardPageButton.Left">
        <item name="android:layout_marginStart">@dimen/margin_32</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
    </style>

    <style name="DashboardPageButton.Right">
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="MyAppointments" />

    <style name="MyAppointments.ItemMyAppointment" />

    <style name="MyAppointments.ItemMyAppointment.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/textRegular</item>
        <item name="android:maxLines">@integer/single_line</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyAppointments.ItemMyAppointment.TextView.Title">
        <item name="android:paddingTop">@dimen/padding_16</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
    </style>

    <style name="MyAppointments.ItemMyAppointment.TextView.Content">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/padding_16</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
    </style>

    <style name="Profile" />

    <style name="Profile.Tab" />

    <style name="Profile.Tab.TextView">
        <item name="android:textColor">@color/textRegular</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="Profile.Tab.TextView.Title">
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/single_line</item>
    </style>

    <style name="Profile.Tab.TextView.Input">
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_editable_field</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:drawablePadding">@dimen/padding_16</item>
    </style>
</resources>
